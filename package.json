{
    "name": "rest-mock-api",
    "version": "1.0.0",
    "author": "Marko Arsic",
    "license": "MIT",
    "description": "Mock API setup for frontend development",
    "main": "src/server.js",
    "scripts": {
        "start-simple": "json-server --watch ./db/full-db.json --port 3001",
        "start": "nodemon ./bootstrap.js",
        "precommit": "pretty-quick --staged",
        "reset": "rm -rf node_modules/ && npm prune && yarn cache clean && yarn",
        "generate-mock-data": "node schema/generateMockData"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:marsicdev/rest-mock-api.git"
    },
    "dependencies": {
        "bcrypt": "^3.0.7",
        "express": "^4.17.3",
        "json-schema-faker": "0.5.0-rc16",
        "json-server": "0.15.1",
        "jsonwebtoken": "^8.5.1",
        "lowdb": "^1.0.0",
        "shortid": "^2.2.15",
        "swagger-ui-express": "^4.1.2",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "babel-cli": "6.26.0",
        "babel-preset-env": "1.7.0",
        "eslint": "6.7.0",
        "eslint-config-standard": "14.1.0",
        "eslint-plugin-import": "2.18.2",
        "eslint-plugin-jest": "23.0.4",
        "eslint-plugin-node": "10.0.0",
        "eslint-plugin-promise": "4.2.1",
        "eslint-plugin-standard": "4.0.1",
        "faker": "^4.1.0",
        "husky": "^3.1.0",
        "nodemon": "2.0.1",
        "prettier": "^1.19.1",
        "pretty-quick": "^2.0.1"
    }
}
